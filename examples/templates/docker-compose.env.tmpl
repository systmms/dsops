# Docker Compose environment file
# Generated: {{ now.Format "2006-01-02 15:04:05" }}

# Database configuration
DATABASE_URL={{ index . "DATABASE_URL" }}
{{- if has "DATABASE_PASSWORD" . }}
POSTGRES_PASSWORD={{ index . "DATABASE_PASSWORD" }}
{{- end }}
{{- if has "DATABASE_USER" . }}
POSTGRES_USER={{ index . "DATABASE_USER" }}
{{- end }}

# API configuration
{{- if has "API_KEY" . }}
API_KEY={{ index . "API_KEY" }}
{{- end }}
{{- if has "JWT_SECRET" . }}
JWT_SECRET={{ index . "JWT_SECRET" }}
{{- end }}

# Application settings
NODE_ENV={{ index . "NODE_ENV" | default "production" }}
DEBUG={{ index . "DEBUG" | default "false" }}
LOG_LEVEL={{ index . "LOG_LEVEL" | default "info" }}